<recipes>

    <append xpath="/recipes">

        <!-- Allow Gold and Silver to be Converted into Brass -->
        <recipe name="resourceScrapBrass" count="2000" craft_area="chemistryStation" tags="chemStationCrafting">
            <ingredient name="resourceGoldNugget" count="1"/>
        </recipe>

        <recipe name="resourceScrapBrass" count="1000" craft_area="chemistryStation" tags="chemStationCrafting">
            <ingredient name="resourceSilverNugget" count="1"/>
        </recipe>

        <!-- Allow Iron to be used to make a Bullet Casing -->
        <recipe name="resourceBulletCasing" count="1" material_based="true" craft_area="forge" is_trackable="false" tags="perkAdvancedEngineering">
            <ingredient name="unit_iron" count="5"/>
            <ingredient name="unit_clay" count="1"/>
            <effect_group>
                <passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,1,2,3,4" value=".25,.25,.25,.12,.06" tags="unit_iron"/>
            </effect_group>
        </recipe>

        <!-- Allow Plastic and Iron to be used to make a Bullet Casing -->
        <recipe name="resourceBulletCasing" count="1" craft_area="chemistryStation" tags="chemStationCrafting">
            <ingredient name="resourceScrapIron" count="1"/>
            <ingredient name="resourceScrapPolymers" count="6"/>
        </recipe>

    </append>

</recipes>
