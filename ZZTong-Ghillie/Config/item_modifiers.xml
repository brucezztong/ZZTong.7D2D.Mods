<configs>
	<append xpath="/item_modifiers">

	<item_modifier name="Ghillie Suit Hood Mod" installable_tags="head" modifier_tags="rare" blocked_tags="noMods,clothing" type="attachment">
		<property name="Extends" value="modGeneralMaster"/>
		<property name="UnlockedBy" value="perkSniperComplete"/> <!-- BOOK_PERK -->
		<property name="DescriptionKey" value="apparelGhillieSuitGroupDesc"/>
		<property name="TraderStageTemplate" value="modsTier1"/>
		<property name="CustomIcon" value="apparelGhillieSuitHood"/>
		<property name="EconomicValue" value="440"/>
		<property name="DisplayType" value="clothingGhillieHood"/>

<!--
		<item_property_overrides name="*">
			<property name="UMA.Mesh" value="ghillie_suit_hat"/>
			<property name="UMA.Overlay0" value="ghillie_suit"/>
			<property name="UMA.Overlay0Tint" value="105,110,83"/>
			<property name="UMA.Layer" value="2"/>
			<property name="UMA.UISlot" value="Headgear"/>
			<property name="UMA.Mask0" value="Head" param1="outer"/>
			<property name="UMA.ShowAltHair" value="true"/>
		</item_property_overrides>
-->

		<effect_group tiered="false">
            <passive_effect name="HypothermalResist" operation="base_add" value="1"/>
            <passive_effect name="HyperthermalResist" operation="base_add" value="1,3.5"/>
            <passive_effect name="LightMultiplier" operation="perc_add" value="-.07"><requirement name="!IsIndoors"/></passive_effect>
            <passive_effect name="LightMultiplier" operation="perc_add" value="-.05"><requirement name="IsIndoors"/></passive_effect>
            <display_value name="dLightMultiplier" value="-.07"/>
		</effect_group>
	</item_modifier>

	<item_modifier name="Ghillie Suit Pants Mod" installable_tags="ghilliePants" modifier_tags="rare" blocked_tags="noMods,armor" type="attachment">
